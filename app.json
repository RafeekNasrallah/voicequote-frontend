{
  "expo": {
    "name": "Quotio",
    "slug": "quotio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "quotio",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.getquotio.quotio",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Quotio needs access to your microphone to transcribe your voice into professional estimates."
      }
    },
    "android": {
      "package": "com.getquotio.quotio",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router", "expo-secure-store", "expo-audio"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
